<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="fontFamily">@font/bebas_neue</item>
    </style>

    <style name="DefaultSolid" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Heading1Text" >
        <item name="fontFamily">@font/bebas_neue</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LabelText" >
        <item name="fontFamily">@font/bebas_neue</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

</resources>